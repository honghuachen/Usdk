<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:paddingLeft="@dimen/ly_common_border_padding"
    android:paddingRight="@dimen/ly_common_border_padding">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ly_reset_pwd_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="24dp"
                android:scaleType="fitXY"
                android:src="@drawable/ly_back_selector" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="143dp">

                <TextView
                    android:id="@+id/ly_title"
                    style="@style/ly_style_text_middle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ly_user_center_change_pwd"
                    android:textColor="@color/ly_color_ff5a00" />

                <EditText
                    android:id="@+id/ly_resetpwd_old"
                    style="@style/ly_style_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ly_common_edittext_height"
                    android:layout_below="@id/ly_title"
                    android:layout_marginTop="14dp"
                    android:digits="@string/ly_pwd_regex"
                    android:hint="@string/ly_reset_pwd_old"
                    android:maxLength="20"
                    android:paddingLeft="10dp"
                    android:password="true"
                    android:singleLine="true"
                    android:textCursorDrawable="@null" />

                <ImageView
                    android:id="@+id/ly_resetpwd_old_clear"
                    android:layout_width="@dimen/ly_common_edittext_clear_size"
                    android:layout_height="@dimen/ly_common_edittext_clear_size"
                    android:layout_alignBottom="@id/ly_resetpwd_old"
                    android:layout_alignRight="@id/ly_resetpwd_old"
                    android:layout_alignTop="@id/ly_resetpwd_old"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ly_delete_icon" />

                <EditText
                    android:id="@+id/ly_resetpwd_new"
                    style="@style/ly_style_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ly_common_edittext_height"
                    android:layout_below="@id/ly_resetpwd_old"
                    android:layout_marginTop="10dp"
                    android:digits="@string/ly_pwd_regex"
                    android:hint="@string/ly_reset_pwd_new"
                    android:maxLength="20"
                    android:paddingLeft="10dp"
                    android:password="true"
                    android:singleLine="true"
                    android:textCursorDrawable="@null" />

                <ImageView
                    android:id="@+id/ly_resetpwd_new_clear"
                    android:layout_width="@dimen/ly_common_edittext_clear_size"
                    android:layout_height="@dimen/ly_common_edittext_clear_size"
                    android:layout_alignBottom="@id/ly_resetpwd_new"
                    android:layout_alignRight="@id/ly_resetpwd_new"
                    android:layout_alignTop="@id/ly_resetpwd_new"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ly_delete_icon" />

                <EditText
                    android:id="@+id/ly_resetpwd_repeat_new"
                    style="@style/ly_style_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ly_common_edittext_height"
                    android:layout_below="@id/ly_resetpwd_new"
                    android:layout_marginTop="10dp"
                    android:digits="@string/ly_pwd_regex"
                    android:hint="@string/ly_reset_pwd_repeat_new"
                    android:maxLength="20"
                    android:paddingLeft="10dp"
                    android:password="true"
                    android:singleLine="true"
                    android:textCursorDrawable="@null" />

                <ImageView
                    android:id="@+id/ly_resetpwd_repeat_new_clear"
                    android:layout_width="@dimen/ly_common_edittext_clear_size"
                    android:layout_height="@dimen/ly_common_edittext_clear_size"
                    android:layout_alignBottom="@id/ly_resetpwd_repeat_new"
                    android:layout_alignRight="@id/ly_resetpwd_repeat_new"
                    android:layout_alignTop="@id/ly_resetpwd_repeat_new"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ly_delete_icon" />

                <Button
                    android:id="@+id/ly_resetpwd_finish"
                    style="@style/ly_style_big_btn_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ly_common_large_btn_height"
                    android:layout_below="@id/ly_resetpwd_repeat_new"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ly_large_btn_selector"
                    android:text="@string/ly_finish"
                    android:textColor="@color/ly_common_btn_text_selector" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>