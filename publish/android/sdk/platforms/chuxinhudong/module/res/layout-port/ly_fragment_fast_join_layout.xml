<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:paddingLeft="@dimen/ly_common_border_padding"
    android:paddingRight="@dimen/ly_common_border_padding">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:scaleType="fitXY"
        android:src="@drawable/ly_logo" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="152dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/ly_fast_join_btn"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="24dp"
            android:background="@drawable/ly_welcome_btn_selector">

            <TextView
                style="@style/ly_style_text_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/ly_welcome_go_to_game"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ly_fast_join_sign"
            style="@style/ly_style_big_btn_text"
            android:layout_width="104dp"
            android:layout_height="36dp"
            android:background="@drawable/ly_small_btn_selector"
            android:text="@string/ly_sign_sign"
            android:textColor="@color/ly_white_ff5a00_selector" />

        <Button
            android:id="@+id/ly_fast_join_login"
            style="@style/ly_style_big_btn_text"
            android:layout_width="104dp"
            android:layout_height="36dp"
            android:layout_marginLeft="18dp"
            android:background="@drawable/ly_small_btn_selector"
            android:text="@string/ly_login_login"
            android:textColor="@color/ly_white_ff5a00_selector" />
    </LinearLayout>

</RelativeLayout>