<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="8dp"
    android:layout_weight="10"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/bdp_paycenter_tv_tip_select_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bdp_paycenter_current_consume_pay"
            android:textColor="#333333"
            android:textSize="@dimen/bdp_paycenter_text_size_14_sp" />

        <TextView
            android:id="@+id/bdp_paycenter_tv_tip_select_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff3300" 
            android:textSize="@dimen/bdp_paycenter_text_size_14_sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bdp_paycenter_layout_tip_pay_surplus_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/bdp_paycenter_tv_tip_pay_surplus_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/bdp_paycenter_tip_pay_info_inaccount"
            android:textColor="@color/bdp_color_ff3300"
            android:textSize="@dimen/bdp_paycenter_text_size_12_sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bdp_paycenter_layout_amout_select_panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <com.baidu.platformsdk.pay.widget.BDPFlowLayout
            android:id="@+id/bdp_paycenter_layout_line_feed_panel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
        </com.baidu.platformsdk.pay.widget.BDPFlowLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/bdp_paycenter_et_card_number"
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:background="@drawable/bdp_paycenter_edittext_selector"
            android:gravity="center_vertical"
            android:hint="@string/bdp_paycenter_tip_card_number"
            android:textColorHint="@color/bdp_color_text_hint"
            android:inputType="number"
            android:nextFocusDown="@+id/bdp_paycenter_et_card_password"
            android:imeOptions="actionNext"
            android:textColor="#333333"
            android:paddingRight="@dimen/bdp_paycenter_input_edit_text_left_padding"
            android:paddingLeft="@dimen/bdp_paycenter_input_edit_text_left_padding"
            android:textSize="@dimen/bdp_paycenter_text_size_14_sp" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/bdp_paycenter_et_card_password"
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:background="@drawable/bdp_paycenter_edittext_selector"
            android:gravity="center_vertical"
            android:hint="@string/bdp_paycenter_tip_card_pass"
            android:textColorHint="@color/bdp_color_text_hint"
            android:singleLine="true"
            android:textColor="#333333"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:paddingRight="@dimen/bdp_paycenter_input_edit_text_left_padding"
            android:paddingLeft="@dimen/bdp_paycenter_input_edit_text_left_padding"
            android:textSize="@dimen/bdp_paycenter_text_size_14_sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bdp_paycenter_btn_game_card_pay"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/bdp_paycenter_btn_enough_pay_selector"
            android:gravity="center"
            android:text="@string/bdp_paycenter_btn_string_pay"
            android:textColor="#ffffff"
            android:textSize="@dimen/bdp_paycenter_text_size_16_sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal" >

        <TextView
             android:id="@+id/bdp_paycenter_tv_tip_sweet_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bdp_paycenter_tip_card_info_title"
            android:textColor="#666666"
            android:textSize="@dimen/bdp_paycenter_text_size_10_sp"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>