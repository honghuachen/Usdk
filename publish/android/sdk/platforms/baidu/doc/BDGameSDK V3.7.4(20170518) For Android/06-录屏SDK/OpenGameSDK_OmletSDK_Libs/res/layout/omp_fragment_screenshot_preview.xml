<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobisocial.omlet.overlaybar.ui.fragment.VideoPreviewFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/relative_layout_preview_top_bar"
            style="@style/omp_video_overlay_top_bar_container">
            <ImageButton
                android:id="@+id/back"
                style="@style/omp_video_overlay_back_button"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/omp_video_overlay_top_bar_button_container"
                android:id="@+id/view_group_video_preview_buttons"
                android:gravity="center">
                <LinearLayout
                    android:id="@+id/linear_layout_cut_button"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@drawable/omp_video_preview_edit_button_selector"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/image_edit_cut"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:src="@drawable/omp_ic_toolbar_edit"/>
                    <TextView
                        android:id="@+id/textview_edit_preview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/omp_edit"
                        style="@style/omp_video_overlay_top_bar_button"
                        android:layout_marginLeft="0dp" />
                </LinearLayout>
                <View
                    android:layout_width="2dp"
                    android:layout_height="13dp"
                    android:background="@color/omp_gray_background_cccccc"
                    android:visibility="gone" />
                <LinearLayout
                    android:id="@+id/linear_layout_save_button"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@drawable/omp_video_preview_edit_button_selector">
                    <ImageView
                        android:id="@+id/image_edit_save"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:src="@drawable/omp_btn_edit_save_normal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/omp_save"
                        android:id="@+id/textview_save_video"
                        style="@style/omp_video_overlay_top_bar_button"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                style="@style/omp_video_overlay_top_bar_title"
                android:text="@string/omp_preview"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/omp_video_overlay_bottom_bar_height"
            android:background="@drawable/omp_video_preview_upload_button_selector"
            android:id="@+id/relative_layout_preview_bottom_bar"
            android:layout_alignParentBottom="true"
            android:gravity="center">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/omp_btn_edit_upload_normal"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/omp_title_next"
                    style="@style/omp_video_overlay_top_bar_button"
                    android:textSize="16sp"/>
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="fill_parent"
            android:layout_below="@id/relative_layout_preview_top_bar"
            android:layout_above="@id/relative_layout_preview_bottom_bar"
            android:id="@+id/screenshot_preview_image"
            />
        <LinearLayout
            android:id="@+id/redo_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/relative_layout_preview_bottom_bar"
            android:layout_marginRight="31dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/omp_white_border_round_background"
            android:visibility="gone">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/omp_btn_edit_redo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="14.5dp"
                android:text="@string/omp_undo_all"
                android:textSize="12sp"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>

